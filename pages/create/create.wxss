page {
	background: rgb(243, 243, 243);
	margin-top: 5rpx;
	font-family: Adobe Heiti Std R;
}

.form-container {
	display: flex;
	flex-direction: column;
	justify-content: center;
	margin: 1% 2%;
	height: auto;
	width: 96%;
}

.formContent {
	height: auto;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	background-color: #fff;
	width: 100%;
	border-radius: 16rpx;
}

.form-item {
	background: #fff;
	display: flex;
	width: 96%;
	justify-content: space-between;
	align-content: center;
	margin: 0rpx;
	padding: 4% 2%;
	border-bottom: 1rpx solid #ebebeb;
	font-family: Adobe Heiti Std;
	font-weight: normal;
	color: #333333;
	font-size: 32rpx;
}

.form-item input {
	text-align: right;
}

.form-item .picker-timer {
	width: 50%;
	display: flex;
	justify-content: flex-end;
}

.form-item .picker {
	font-family: Adobe Heiti Std;
	font-weight: normal;
	color: #333333;
	font-size: 32rpx;
}

.form-item .picker-timer .picker-icon {
	width: 28rpx;
	height: 18rpx;
	line-height: 80rpx;
	margin: auto;
	padding-left: 25rpx;
}

.form-admin {
	border-bottom:none;
	border-bottom-right-radius:16rpx;
	border-bottom-left-radius:16rpx;
}

.handle {
	display: flex;
	flex-direction: row;
	height: auto;
	width: 100%;
	justify-content: space-around;
 } 

.handle .btn-submit {
	background-image: linear-gradient(90deg, #10A5FF, #007DFF);
	width: 35% !important;
	height: 80rpx;
	text-align: center;
	color: #ffffff;
	margin: 70rpx auto;
	border-radius: 40rpx;
	font-size: 30rpx !important;
	padding-top: 21rpx;
}

.handle .btn-reset {
	background-image: linear-gradient(90deg, rgb(204, 204, 204), rgb(204, 204, 204)) !important;
}

.require {
	color: #da1616;
	padding: 0 5rpx;
}

